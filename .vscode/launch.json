    "version": "0.2.0",
    "configurations": [
        {
            "name": "[Chore Master API] Web Server",
            "type": "debugpy",
            "request": "launch",
            "module": "chore_master_api.entrypoints.web_server",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "justMyCode": false,
            "env": {
                "ENV": "local",
                "SERVICE_NAME": "chore_master_api",
                "COMPONENT_NAME": "web_server",
                "MONGODB_URI": "mongodb://localhost:27017",
                "GOOGLE_OAUTH_CLIENT_ID": "<GOOGLE_OAUTH_CLIENT_ID>",
                "GOOGLE_OAUTH_SECRET": "<GOOGLE_OAUTH_SECRET>",
            }
        },
        {
            "name": "[Bill Processor] Transform to CSV",
            "type": "debugpy",
            "request": "launch",
            "module": "apps.bill_processor.entrypoints.transform_to_csv",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "justMyCode": false,
            "env": {
            }
        },
    ]
}